{% extends 'base.html.twig' %} {% block title %}Hello HomeController!{% endblock
%} {% block body %}

<div class="container mt-5 mb-5">
  <div class="row">
    <div class="text-center container col-5">
      <h2>Les dernières actualités</h2>
      {% for actu in actues %}
      <article class="card mt-3">
        <h5>{{ actu.titre }}</h5>
        <div class="metadata">
          Ecrit le {{ actu.createdAt | date('d/m/Y') }} à
          {{ actu.createdAt | date('H:i') }}
        </div>
        <div class="card-body">
          <img class=" img-fluid" width="60%" src="{{ actu.file }}" alt="" />
          <div class="card-text">{{ actu.contenu | raw }}</div>
        </div>
      </article>
      {% endfor %}

      
    </div>
    <span class="text-center container col-1 border-end"></span>
    <span class="text-center container col-1 border-start"></span>
    <div class="text-center container col-5">
      <h2>Les derniers événements</h2>
      {% for event in events %}
      <article class="card mt-3">
        <h5>{{ event.titre }}</h5>
        <div class="metadata">
          Ecrit le {{ event.createdAt | date('d/m/Y') }} à
          {{ event.createdAt | date('H:i') }}
        </div>
        <div class="content">
          <img class=" img-fluid" width="60%" src="{{ event.file }}" alt="" />
          <div class="card-text">{{ event.contenu | raw }}</div>
        </div>
      </article>
      {% endfor %}
    </div>
  </div>
</div>

{% endblock %}
