{% extends 'base.html.twig' %} {% block title %}Hello ActuController!{% endblock
    %} {% block body %}
    
    <div class="container mt-5 text-center mb-5">
      <h2>Les événements du Village</h2>
      <div class="row">
        {% for event in events %}
      <div class="text-center container col-4">
        
        <article class="card bg-light mb-3 mt-3">
          <div class="card-header">
          <h5>{{ event.titre }}</h5>
        </div>
          <div class="metadata">
            Ecrit le {{ event.createdAt | date('d/m/Y') }} à
            {{ event.createdAt | date('H:i') }}
          </div>
          
          <div class="card-body">
            <img class="img-fluid" src="{{ event.file }}" alt="" />
            <div class="card-text">{{ event.contenu | raw }}</div>
            {% if app.user %}
            <a href="{{ path('admin_edit_event', {'id': event.id}) }}" class="btn btn-success mt-2">Modifier l'article</a>
            <a href="{{ path('supprimer_event', {'id': event.id}) }}" class="btn btn-danger mt-2">Supprimer l'article</a>
          </div>
          {% endif %}
        </article>
    </div>
        {% endfor %}
    
      </div>
      
    </div>
    
    {% endblock %}
