{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}
{% form_theme form
    'bootstrap_5_layout.html.twig' %}
{% block body %}

<div class="container text-center col-md-4">
{{ form_start(form) }}

    {{ form_row(form.nom, {'attr': {'placeholder': "Votre nom"}}) }}
    {{ form_row(form.prenom, {'attr': {'placeholder': "Votre prenom"}}) }}
    {{ form_row(form.telephone, {'attr': {'placeholder': "Votre numéro de téléphone"}}) }}
    {{ form_row(form.email, {'attr': {'placeholder': "Votre adresse email"}}) }}
    {{ form_row(form.contenu, {'attr': {'placeholder': "Votre message"}}) }}
       
    <button class="btn btn-success" type="submit">Envoyer</button>
{{ form_end(form) }}

</div>
{% endblock %}
